<%- include('partials/header.ejs'); %>
<div class="container">
	<div class="row">
	    
	    <div class="col-md-8 col-md-offset-2">
	        
    		<h1>Edit Post</h1>
    		
    		<form action="/blogs/update/<%= id %>" method="POST">
    		    
    		    <div class="form-group">
    		        <label for="title">Title <span class="require" style="color: red;">*</span></label>
    		        <input type="text" class="form-control" name="title" value="<%= title %>"/>
    		    </div>
                <div class="form-group">
    		        <label for="title">Sumary<span class="require" style="color: red;">*</span></label>
    		        <input type="text" class="form-control" name="subtitle" value="<%= subtitle %>"/>
    		    </div>
    		    <div class="form-group">
    		        <label for="description">content</label>
    		        <textarea rows="5" class="form-control" name="body"><%= body %></textarea>
    		    </div>
    		    
    		    <div class="form-group">
    		        <p><span class="require" style="color: red;">*</span> - required fields</p>
    		    </div>
    		    
    		    <div class="form-group">
    		        <button type="submit" class="btn btn-primary">
    		            Edit
    		        </button>
    		        <a href="/post" class="btn btn-default">
    		            Cancel
                    </a>
    		    </div>
    		    
    		</form>
		</div>
        <%- include('partials/footer.ejs'); %>